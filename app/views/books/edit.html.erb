<div class="container">
<div class="row">
<div class="col-sm-4"></div>
<div class="col-sm-4">
					<h1>Editing Book</h1>
<!-- エラーメッセージ -->
<div class="message">
<%= h(flash[:notice]) %>
</div>
<!-- ここまで -->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
            <div id="error_explanation">
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

                    <h4>Title</h4>
                    <%= f.text_field :title %>
                    <h4>Opinion</h4>
                    <%= f.text_area :body %>
		<div class="update-button">
                    <%= f.submit 'Update Book', class: "btn-primary btn-lg" %><!-- book_pathへリダイレクトしたい -->
		</div>
<% end %>
<p><%= link_to "Show", book_path(@book.id) %>
 |
<%= link_to "Back", books_path %></p>
</div>
<div class="col-sm-4"></div>
</div> <!-- row -->
</div> <!-- container -->

