<div class="container">
<div class="row">
<div class="col-lg-3">
              <%= render 'books/list', books: @books %>
</div>
<div class="col-lg-9">
		      <h1>Book detail</h1>
<table class="table table-striped">
<% @books.each do |book| %>
<tr>
<td><span><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><%= @user.name %></span></td>
<td><span><%= @book.title %></span></td> <!-- 押せるようにしたい @つけるだけ？-->
<td><span><%= book.body %></span></td>
<td><%= link_to "Edit", edit_book_path(book.id), class: "btn-success btn-lg" %></td> <!-- @bookかbook.idか分からない -->
<td><% if @book.user == current_user %> <!-- 投稿者でなければ、削除ボタンが表れない -->
		<%= link_to "Destroy", books_path(@book), class: "btn-danger btn-lg" method: :delete, "data-confirm" => "Are you sure?" %>
	<% end %></td><!-- @bookかbook.idか分からない -->
</tr>
<% end %>
</table>

</div> <!-- col -->
</div> <!-- row -->
</div> <!-- container -->

