<div class="container">
<div class="row">
<div class="col-lg-4" style="background-color: orange;">
        <h2>サイドバー <%= render 'books/list', books: @books %>  </h2>
</div>
<div class="col-lg-8">
		<h1>Book detail</h1>
<table>
<% @books.each do |book| %>
<tr>
<td><span><%= <!-- プロフィール写真,名前 --> %></span></td>
<td><span><%= book.title %></span></td>
<td><span><%= book.body %></span></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</table>

</div>
</div>
</div>


