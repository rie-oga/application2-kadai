<div class="leftside clearfix">

<div class="user_info">

  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image
  , :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
    <p><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %>
</div>

<%= render 'post_images/list', post_images: @post_images %>



<div class="new_book">
<h1>New book</h1>

<!-- successメッセージ -->
<% if flash[:notice] %>
    <div class="flash">
       <%= flash[:notice] %>
    </div>
<% end %>
<!-- ここまで -->
<!-- errorメッセージ -->
<div class="error">
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
<!-- ここまで -->
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
 
  <h4>Option</h4>
  <%= f.text_area :body %>
 
 <div class="create-book-button">
  <%= f.submit 'Create Book' %>
 </div>

<% end %>
</div>
</div>