<div class="container">
<div class="row">
<div class="col-lg-3">
             <%= render 'books/list', books: @books %>
</div>
<div class="col-lg-9">
		     <h1>Books</h1>
<table　class="table table-striped">
<tr>
<th><%= @user.name %></th>
<th>Title</th>
<th>Opinion</th>
</tr>

<% @books.each do |book| %>
<tr>
<td><span><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><%= @user.name %></span></td>
<td><span><%= book.title %></span></td> <!-- 押せるように変える -->
<td><span><%= book.body %></span></td>
</tr>
<% end %>
</table>

</div> <!-- col -->
</div> <!-- row -->
</div> <!-- container -->