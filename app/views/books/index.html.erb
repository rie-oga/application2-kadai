<div class="container">
	<div class="row">
		<div class="col-xs-3">
            <%= render 'books/list',book: @book, user: @user  %>
		</div>
		<div class="col-xs-9">
		    <h1>Books</h1>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>

			<% @books.each do |book| %>
				<tr>
					<td><%= link_to user_path(book.id) do %>
					    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
					    <% end %></td>
					<td><span><%= link_to book.title, book_path(book.id) %></span></td>
					<td><span><%= book.body %></span></td>
				</tr>
			<% end %>
			</table>
		</div> <!-- col -->
	</div> <!-- row -->
</div> <!-- container -->