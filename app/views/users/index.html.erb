<div class="container">
<div class="row">
<div class="col-lg-3">
            <%= render 'books/list', books: @books %>  </h2>
</div>
<div class="col-lg-9">
		<h1>Users</h1>
<table>
<tr>
<th>image</th>
<th>name</th>
<th>  </th>
</tr>

<% @books.each do |book| %>
<tr>
<td><span><%= attachment_image_tag post_image.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></span></td>
<td><span><%= @user.name %></span></td>
<td><%= link_to "Show", book_path(book.id) %></td>
</tr>
<% end %>
</table>
</div>
</div>
</div>

